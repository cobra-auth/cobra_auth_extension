{
    "manifest_version": 3,
    "name": "University Authenticator",
    "version": "1.0.4",
    "description": "To prevent you brokies from destroying your own future.",
    "action": {
        "default_popup": "./index.html",
        "default_icon": {
            "16": "./icon16.png",
            "24": "./icon24.png",
            "32": "./icon32.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*.university.com/*",
        "*://*.jointherealworld.com/*",
        "*://*.therealworld.ag/*"
    ]
}