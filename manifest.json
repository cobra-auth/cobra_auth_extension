{
    "manifest_version": 3,
    "name": "University Authenticatior",
    "version": "1.0.3",
    "description": "To prevent you brokies from destroying your own future.",
    "action": {
        "default_popup": "./index.html",
        "default_icon": {
            "16": "./icon16.png",
            "24": "./icon24.png",
            "32": "./icon32.png"
        }
    },
    "permissions": [
        "tabs",
        "identity",
        "identity.email",
        "scripting"
    ],
    "host_permissions": [
        "*://*.university.com/*",
        "*://*.jointherealworld.com/*",
        "*://*.therealworld.ag/*",
        "*://*.tradingview.com/*"
    ]
}